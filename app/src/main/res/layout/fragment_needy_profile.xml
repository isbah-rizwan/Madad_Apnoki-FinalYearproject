<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="#FFE55C"
            android:padding="10dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pprofile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/profile"
                app:civ_border_color="#FFE55C"
                app:civ_border_width="5dp" />

            <!--<TextView
                android:id="@+id/changeprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pprofile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Click to change profile Picture"
                android:textSize="16dp"
                android:textStyle="bold" />-->

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="486dp"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:id="@+id/nedname"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Name:"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/nedcontact"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Contact:"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nedcnic"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="CNIC:"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nedemail"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Email:"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"  />

            <TextView
                android:id="@+id/neddetails"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Account Details:"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"  />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>